<?xml version="1.0" encoding="UTF-8"?>
<ehcache name="context-image" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd" updateCheck="false">
    <diskStore path="java.io.tmpdir"/>  <!--Users can modify this attribute following the
    http://ehcache.org/documentation/2.4/user-guide/storage-options#DiskStore as a guideline-->
    <cache
        name="com.sdl.context.image.api.ImageTransformer"
        maxEntriesLocalHeap="1000"
        eternal="false"
        timeToIdleSeconds="1210"
        timeToLiveSeconds="2410"
        overflowToDisk="true"
        />
    <cache
        name="com.sdl.context.image.ImageUpdateTimeStamp"
        maxEntriesLocalHeap="1000"
        eternal="false"
        timeToIdleSeconds="1220"
        timeToLiveSeconds="2420"
        overflowToDisk="true"
        />
</ehcache>
