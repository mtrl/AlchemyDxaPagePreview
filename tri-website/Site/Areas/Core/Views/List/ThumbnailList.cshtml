@model ContentList<Teaser>
<div @Markup.Entity(Model)>
    @if (Model.Headline!=null)
    {
        <h3 @Markup.Property(Model,"Headline")>@Model.Headline</h3>
    }
    <ul class='popup-image-gallery list-gallery'>
        @if (Model.ItemListElements!=null)
        {
            for (int i = 0; i < Model.ItemListElements.Count; i++)
            {
                var item = Model.ItemListElements[i];
                <li @Markup.Property(Model, "ItemListElements", i)>
			        <a title="@item.Headline" href='@item.Media.Url'>
				        @Html.Media(item.Media, "172", 1)
			        </a>
		        </li>
            }
        }
    </ul>
</div>